<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginDetails.Pages.LoginPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
            <BoxView HeightRequest="10"/>
            <Frame BackgroundColor="#BF043055" HasShadow="False">
                <StackLayout  Orientation="Vertical" Spacing="10">
                    <Entry x:Name="Email" Text="{Binding Email}" PlaceholderColor="White"
                      HeightRequest="40" Keyboard="Email" TextColor="Black"/>
                    <Entry x:Name="Password" Iext="{Binding Password}" Placeholder="Euan"
               PlaceholderColor="White" HeightRequest="40" IsPassword="True" 
               TextColor="Black"/>
                </StackLayout>
            </Frame>
            </Button Command="{Binding SubnitCommand}" Text="Login" TextColor="Black"
                     FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"
                     BackgroundColor="#088da5" />
        
            <Application.Resources>

    </Application.Resources>
</Application>